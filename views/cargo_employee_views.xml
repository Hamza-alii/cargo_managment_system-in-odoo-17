<odoo>
    <record id="view_cargo_employee_form" model="ir.ui.view">
        <field name="name">cargo.employee.form</field>
        <field name="model">cargo.employee</field>
        <field name="arch" type="xml">
            <form string="Cargo Employee">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="job_position"/>
                        <field name="phone"/>
                        <field name="email"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_cargo_employee_tree" model="ir.ui.view">
        <field name="name">cargo.employee.tree</field>
        <field name="model">cargo.employee</field>
        <field name="arch" type="xml">
            <tree string="Cargo Employees">
                <field name="name"/>
                <field name="job_position"/>
                <field name="phone"/>
                <field name="email"/>
            </tree>
        </field>
    </record>
</odoo>
