<odoo>
    <record id="view_cargo_vehicle_form" model="ir.ui.view">
        <field name="name">cargo.vehicle.form</field>
        <field name="model">cargo.vehicle</field>
        <field name="arch" type="xml">
            <form string="Cargo Vehicle">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="license_plate"/>
                        <field name="capacity"/>
                        <field name="active"/>
                        <field name="driver_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_cargo_vehicle_tree" model="ir.ui.view">
        <field name="name">cargo.vehicle.tree</field>
        <field name="model">cargo.vehicle</field>
        <field name="arch" type="xml">
            <tree string="Cargo Vehicles">
                <field name="name"/>
                <field name="license_plate"/>
                <field name="capacity"/>
                <field name="active"/>
            </tree>
        </field>
    </record>
</odoo>
